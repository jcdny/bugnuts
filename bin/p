#!/usr/bin/env sh
ROOT=~/src/ai
EXE=$ROOT/bot/bin/bot.sh
TOOLS=$ROOT/tools
MAPS=$ROOT/bot/pkg/maps/testdata/maps
ARCH="`uname -s`"

export MAP1="random_walk_04p_02.map" # translation  symmetry
export MAP2="maze_04p_02.map" # mirror rc annoying map
export MAP3="maze_04p_01.map" # mirror rc straight across from another hill.
export MAP4="mmaze_04p_01.map" # tr 6 hills per player - insane.
export MAP5="random_walk_04p_01.map" # tr  empty
export MAP6="mmaze_04p_02.map"  # mirror rc 2 hills each
export MAP7="cell_maze_p04_01.map"
export MAP8="cell_maze_p04_02.map"
export MAP9="cell_maze_p04_03.map"
export MAP10="cell_maze_p04_04.map"

export MAP="$MAPS/$MAP1"
echo $MAP

#    --nolaunch \

$TOOLS/playgame.py \
    --fill \
    -I -E -e -O -R \
    --turntime 4000 \
    --player_seed 41 \
    --engine_seed 41 \
    --end_wait=0.25 \
    --verbose \
    --log_dir $ROOT/bot/log \
    --turns 1000 \
    --map_file $MAP \
    --food_rate 5 11 \
    --food_turn 19 37 \
    --food_start 75 175 \
    --food_visible 3 5 \
    --cutoff_turn 150 \
    --cutoff_percent 0.85 \
    "$@" \
    "$EXE" \
    "$ROOT/bot/bin/$ARCH/bugnutsv5" \
    "python $TOOLS/sample_bots/python/GreedyBot.py" "python $TOOLS/sample_bots/python/HunterBot.py" \




